<DefaultWindow xmlns="https://spacestation14.io"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              Title="{Loc 'trait-window-title'}"
              MinSize="700 400"
              SetSize="800 500">
    <BoxContainer Orientation="Vertical" Margin="10">
        <!-- Category title and description -->
        <Label Name="CategoryTitle" 
               StyleClasses="LabelHeading" 
               Margin="0 0 0 10"/>
        
        <!-- Selection counter -->
        <Label Name="SelectionCounter"
               FontColorOverride="Gray"
               Margin="0 0 0 10"/>
        
        <!-- Scrollable list of traits in columns -->
        <ScrollContainer VerticalExpand="True" Margin="0 0 0 10">
            <GridContainer Name="TraitsContainer" 
                          Columns="3"/>
        </ScrollContainer>
        
        <!-- Bottom buttons -->
        <BoxContainer Orientation="Horizontal" 
                     HorizontalAlignment="Right">
            <Button Name="CancelButton" 
                   Text="{Loc 'trait-window-cancel'}"
                   Margin="0 0 5 0"/>
            <Button Name="SaveButton" 
                   Text="{Loc 'trait-window-save'}"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
