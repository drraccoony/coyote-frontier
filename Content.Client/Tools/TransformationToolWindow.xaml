<DefaultWindow xmlns="https://spacestation14.io"
                       xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                       xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                       Title="Transformation Tool"
                       MinSize="400 300"
                       SetSize="450 400">
    <BoxContainer Orientation="Vertical" Margin="4">
        <!-- Scanned Entity Info -->
        <PanelContainer StyleClasses="AngleRect">
            <BoxContainer Orientation="Vertical" Margin="4">
                <Label Text="Scanned Entity" StyleClasses="LabelHeading"/>
                <Label Name="ScannedLabel" Text="None" Margin="0 4 0 0"/>
                <Button Name="ClearScanButton" Text="Clear Scan" Margin="0 4 0 0"/>
            </BoxContainer>
        </PanelContainer>

        <!-- Duration Settings -->
        <PanelContainer StyleClasses="AngleRect" Margin="0 4 0 0">
            <BoxContainer Orientation="Vertical" Margin="4">
                <Label Text="Transformation Duration" StyleClasses="LabelHeading"/>
                <BoxContainer Orientation="Horizontal" Margin="0 4 0 0">
                    <LineEdit Name="DurationInput" MinSize="100 0" HorizontalExpand="True"/>
                    <Label Text="minutes (0 = permanent)" Margin="4 0 0 0"/>
                </BoxContainer>
            </BoxContainer>
        </PanelContainer>

        <!-- Active Transformations -->
        <PanelContainer StyleClasses="AngleRect" Margin="0 4 0 0" VerticalExpand="True">
            <BoxContainer Orientation="Vertical" Margin="4">
                <BoxContainer Orientation="Horizontal">
                    <Label Text="Active Transformations" StyleClasses="LabelHeading" HorizontalExpand="True"/>
                    <Button Name="RevertAllButton" Text="Revert All"/>
                </BoxContainer>
                <ScrollContainer Margin="0 4 0 0" VerticalExpand="True">
                    <BoxContainer Name="TransformationsList" Orientation="Vertical"/>
                </ScrollContainer>
            </BoxContainer>
        </PanelContainer>

        <!-- Instructions -->
        <Label Margin="0 4 0 0" Text="Instructions: 1) Scan object 2) Set duration 3) Transform consenting players (check OOC tab)" StyleClasses="LabelSubText"/>
    </BoxContainer>
</DefaultWindow>
